<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_fruit"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_fruit"
            android:background="@drawable/bottom_space">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/divider">

                <com.goals.mobile.fruity_fruity.controller.viewcontols.TextViewMedium
                    android:id="@+id/textView_fruite_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Fruit Name"
                    android:textColor="@color/colorText"

                    />

                <com.goals.mobile.fruity_fruity.controller.viewcontols.TextViewMedium

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_prize"
                    android:layout_below="@+id/textView_fruite_name"
                    android:layout_marginLeft="10dp"

                    android:text="$99"

                    android:textColor="@color/colorText"

                    />
            </RelativeLayout>


            <ImageView
                android:id="@+id/shoping_buket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shopping_bucket" />

            <ImageView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/shoping_buket"
                android:background="@drawable/divider_1" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
